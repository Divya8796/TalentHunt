<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.divya.talenthunt" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".Login"
            android:label="@string/app_name" >

        </activity>
        <activity android:name=".upload"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".Hirer"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".display_random_videos"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".play_video"
            android:label="@string/app_name"  >
        </activity>
        <activity
            android:name=".search"
            android:label="@string/title_activity_search" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" >
            </meta-data>
        </activity>
        <activity
            android:name=".container"
            android:label="@string/title_activity_container" >
        </activity>
    </application>

</manifest>
